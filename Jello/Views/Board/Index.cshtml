@{
    int i = 0;
}
<div class="createBoardWrap">
    <h1>Your Current Board:</h1>
    @foreach (var item in Model)
    {
        string div = "boardContent" + i.ToString();
    <a href ='@Url.Action("Index", "List", new { boardid = @item.BoardID }, null)'>
