                <li class="title">@item.Title</li>
                <li class="subtitle">@item.Description</li>
                <li class="subtitle">By: @item.FullName</li>
            </ul>
        </div>
    </a>
        if(i < 4)
        {
            i++;
        }
        else if (i >= 4)
        {
            i = 0;
        }
        
    }
</div>


